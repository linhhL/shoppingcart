  <script>
    function toggleSection(id) {
      const section = document.getElementById(id);
      section.style.display = section.style.display === "block" ? "none" : "block";
    }

    function addToCart() {
      const sizeHim = document.getElementById("sizeHim").value;
      const sizeHer = document.getElementById("sizeHer").value;
      const result = document.getElementById("result");

      if (!sizeHim || !sizeHer) {
        alert("Please select both sizes!");
        return;
      }

      const newItem = {
        name: "Grey Set",
        price: 999000,
        sizeHim: sizeHim,
        sizeHer: sizeHer
      };

      let cart = JSON.parse(localStorage.getItem("cart")) || [];
      cart.push(newItem);
      localStorage.setItem("cart", JSON.stringify(cart));

      result.innerText = `ðŸ›’ Added to cart â€“ Size for Him: ${sizeHim}, Size for Her: ${sizeHer}`;
    }
  </script>
